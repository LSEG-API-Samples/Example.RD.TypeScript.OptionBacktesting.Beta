{
	"compilerOptions": {
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strictNullChecks": false,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitAny": true,
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"src/**/*"
	],
}